<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brechodoslivros.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.brechodoslivros.app.SignInActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.brechodoslivros.app.SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="com.brechodoslivros.app.MainActivity"
            android:label="@string/title_activity_sign_in" >
        </activity>
        <activity
            android:name="com.brechodoslivros.app.UserInfoActivity"
            android:label="@string/title_activity_user_info" >
        </activity>
        <activity
            android:name="com.brechodoslivros.app.SellBookActivity"
            android:label="@string/title_activity_sell_book" >
        </activity>
        <activity
            android:name="com.brechodoslivros.app.NeedBookActivity"
            android:label="@string/title_activity_need_book" >
        </activity>
        <activity
            android:name="com.brechodoslivros.app.ListBooks"
            android:label="@string/title_activity_list_books" >
        </activity>
        <activity
            android:name="com.brechodoslivros.app.AddBook"
            android:label="@string/title_activity_add_book" >
        </activity>
        <activity
            android:name="com.brechodoslivros.app.ChooseBook"
            android:label="@string/title_activity_choose_book" >
        </activity>
        <activity
            android:name="com.brechodoslivros.app.DonateBookActivity"
            android:label="@string/title_activity_donate_book" >
        </activity>
    </application>

</manifest>